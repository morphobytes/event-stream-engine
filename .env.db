# PostgreSQL Database Configuration
POSTGRES_DB=event_stream_dev
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=dev_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database Connection Pool Settings
SQLALCHEMY_ENGINE_OPTIONS_POOL_SIZE=5
SQLALCHEMY_ENGINE_OPTIONS_MAX_OVERFLOW=10
SQLALCHEMY_ENGINE_OPTIONS_POOL_TIMEOUT=30
SQLALCHEMY_ENGINE_OPTIONS_POOL_RECYCLE=3600

# Database Migration Settings
FLASK_DB_MIGRATE_DIRECTORY=migrations

# Development Database Settings
SQLALCHEMY_ECHO=False
SQLALCHEMY_TRACK_MODIFICATIONS=False