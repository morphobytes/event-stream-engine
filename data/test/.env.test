# Redis (use separate test database)
REDIS_URL=redis://localhost:6379/15

# Twilio Test Credentials (Test Account)
TWILIO_ACCOUNT_SID=AC_test_account_sid_12345
TWILIO_AUTH_TOKEN=test_auth_token_12345
TWILIO_PHONE_NUMBER=whatsapp:+15551234567

# Application Settings
FLASK_ENV=testing
SECRET_KEY=test-secret-key-for-testing-only
